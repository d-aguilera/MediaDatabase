@using MediaDatabase.Web.Models
@model MediaModel
@{
    ViewBag.Title = "Media";

    var header = Model.Media.FirstOrDefault();
}
<h2>@ViewBag.Title</h2>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(o => header.Caption)</th>
        <th>@Html.DisplayNameFor(o => header.PrintableSize)</th>
        <th>@Html.DisplayNameFor(o => header.MediaType.Name)</th>
        <th>@Html.DisplayNameFor(o => header.SerialNumber)</th>
        <th></th>
    </tr>
@foreach (var item in Model.Media) {
    <tr>
        <td>@Html.DisplayFor(o => item.Caption)</td>
        <td>@Html.DisplayFor(o => item.PrintableSize)</td>
        <td>@Html.DisplayFor(o => item.MediaType.Name)</td>
        <td>@Html.DisplayFor(o => item.SerialNumber)</td>
        <td>@Html.ActionLink("Details", "Details", new { id=item.Id })</td>
    </tr>
}
</table>
@section scripts {
@Scripts.Render("~/Scripts/moment.js")
}
