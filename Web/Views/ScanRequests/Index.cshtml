@using MediaDatabase.Web.Models
@model ScanRequestsModel
@{
    ViewBag.Title = "Scan Progress";

    var header = Model.ScanRequests.FirstOrDefault();
}
<h2>@ViewBag.Title</h2>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(o => header.Id)</th>
        <th>@Html.DisplayNameFor(o => header.StatusName)</th>
        <th>@Html.DisplayNameFor(o => header.VolumeName)</th>
        <th></th>
    </tr>
@foreach (var item in Model.ScanRequests) {
    <tr>
        <td>@Html.DisplayFor(o => item.Id)</td>
        <td>@Html.DisplayFor(o => item.StatusName)</td>
        <td>@Html.DisplayFor(o => item.VolumeName)</td>
        <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
    </tr>
}
</table>
@section scripts {
@Scripts.Render("~/Scripts/moment.js")
}
